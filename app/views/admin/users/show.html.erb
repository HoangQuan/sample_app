<section products-show>
  <% if notice %>
    <%= notice %>
  <% end %>
  <table class="table table-striped table-bordered"> 
    <tr>
      <th rowspan="8" width="30%"><%= image_tag(@user.avatar)%></th>
    </tr>
    <tr>
      <th>ID: </th>
      <td><%= @user.id%></td>
    </tr>
    <tr>
      <th>Name: </th>
      <td><%= @user.name%></td>
    </tr>
    <tr>
      <th>Tel: </th>
      <td><%= @user.tel%></td>
    </tr>
    <tr>
      <th>Email: </th>
      <td><%= @user.email%></td>
    </tr>
    <tr>
      <th>Uid: </th>
      <td><%= @user.uid%></td>
    </tr>
    <tr>
      <th>Admin: </th>
      <td><%= @user.admin%></td>
    </tr>
    <tr>
      <td colspan="2">
        <%= link_to "Back", admin_users_path, class: "btn btn-large" %>
        <%= link_to "Edit", edit_admin_user_path(@user), class: "btn btn-large btn-primary" %>
        <%= link_to "Destroy", admin_user_path(@user), method: :delete, data: {confirm: "Are you sure?"}, class: "btn btn-large"%>
      </td>
    </tr>
</section>
