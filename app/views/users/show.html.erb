<% provide(:title, @user.name) %>
<div class="row">
  <aside class="span4">
    <section>
      <h1>
      	<% flash.each do |key, value| %>
        <div class="alert alert-<%= key %>"><%= value %></div>
      <% end %>
      </h1>
    </section>
  </aside>
</div>
<h2>User Profile</h2>
<table class="table table-bordered table-striped" width="40%">
  <tr>
    <td rowspan = "5" width="130"><%= @user.avatar.present? ? image_tag(@user.avatar) : image_tag("http://www.sancoso.com/app/views/default/static/img/no-avatar.png") %></td>
  </tr>
  <tr>
    <td>Name: <%= @user.name %></td>
  </tr>
  <tr>
    <td>Email: <%= @user.email %></td>
  </tr>
  <tr>
    <td>Phone Number: <%= @user.tel %></td>
  </tr>
  <tr>
    <td colspan="2">Posts: <%= @user.posts.count %></td>
  </tr>
  <tr><td><%= link_to "Edit Profile", edit_user_path(@user), class: "btn btn-primary" if correct_user?(@user) %></td></tr>
</table>
<h2>User posts</h2>
<table class = "table table-bordered table-striped">
  <% @user.posts.each  do |post| %>
    <tr>
      <td width="130"><%= post.user.avatar.present? ? image_tag(post.user.avatar) : image_tag("http://www.sancoso.com/app/views/default/static/img/no-avatar.png") %></td>
      <td><%=link_to post.title, post_path(post) %></td>
      <td><%= "Đã có lượt #{post.comments.count} comments" %></td>
    </tr>
  <% end %>
</table>
